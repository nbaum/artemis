# -*- mode: ruby
source 'https://rubygems.org'

# Rails
gem 'rails', '4.0.0'

# Database
gem 'sqlite3'
gem 'bcrypt-ruby', '~> 3.0.0'

# Helpers
gem "kaminari"

# Assets
gem 'sass-rails', '~> 4.0.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'slim-rails'
gem 'uglifier', '>= 1.3.0'
gem 'jquery-rails'
gem 'jquery-ui-rails'
gem 'compass-rails'

# Middleware/initializers
gem 'dotenv-rails'
gem 'exception_notification'

# Utilities
gem 'whenever'

# Deployment
gem 'capistrano', group: :development
gem 'capistrano-rails', group: :development

# Useful libraries
gem 'faraday'

# Development
group :development do
  gem 'better_errors'
  gem 'binding_of_caller'
  gem 'quiet_assets'
  gem 'puma'
end
